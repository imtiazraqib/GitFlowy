{
  "manifest_version": 3,
  "name": "GitFlowy",
  "version": "1.0.0",
  "description": "Stop being the bottleneck. Clear your PR backlog with traffic-light precision.",
  "permissions": ["storage", "alarms", "activeTab"],
  "host_permissions": ["https://github.com/*", "https://api.github.com/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pulls*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/GitFlowy_icon16.png",
    "32": "icons/GitFlowy_icon32.png",
    "48": "icons/GitFlowy_icon48.png",
    "128": "icons/GitFlowy_icon128.png"
  }
}
